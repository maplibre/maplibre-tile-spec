{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer"
    },
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "attribution": {
      "type": "string"
    },
    "minZoom": {
      "type": "integer"
    },
    "maxZoom": {
      "type": "integer"
    },
    "bounds": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "left": {
            "type": "number"
          },
          "top": {
            "type": "number"
          },
          "right": {
            "type": "number"
          },
          "bottom": {
            "type": "number"
          }
        },
        "required": [
          "left",
          "top",
          "right",
          "bottom"
        ]
      }
    },
    "center": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "latitude": {
            "type": "number"
          },
          "longitude": {
            "type": "number"
          }
        },
        "required": [
          "latitude",
          "longitude"
        ]
      }
    }
  },
  "required": [
    "version"
  ]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "outDir": "./dist",
    "resolveJsonModule": true,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "test/benchmark/**/*.ts",
    "test/server/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
